-- Create a ScreenGui object
local gui = Instance.new("ScreenGui")
gui.Name = "AutoChestGUI"
gui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create the main frame for the GUI
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0.5, -100, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.8
frame.Active = true
frame.Draggable = true
frame.Parent = gui

-- Add rounded corners to the frame
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = frame

-- Create the header frame
local header = Instance.new("Frame")
header.Size = UDim2.new(1, 0, 0, 25)
header.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
header.Parent = frame

-- ... existing code ...

-- Create the close button
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.new(0, 20, 0, 20)
closeButton.Position = UDim2.new(1, -20, 0.5, -10)
closeButton.BackgroundTransparency = 1 -- Set background transparency to make it invisible
closeButton.Text = "X"
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 13
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Parent = header

-- Add functionality to the close button
closeButton.MouseButton1Click:Connect(function()
    -- Handle the close button click event
    frame.Visible = false -- Set the main frame visibility to false to hide the GUI
end)

-- ... existing code ...


-- Create the title label
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 1, 0)
titleLabel.Position = UDim2.new(0, 0, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "Auto Chest"
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 18
titleLabel.TextXAlignment = Enum.TextXAlignment.Center
titleLabel.TextYAlignment = Enum.TextYAlignment.Center
titleLabel.Parent = header

-- Create the on/off button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 80, 0, 30)
button.Position = UDim2.new(0.5, -40, 0, 40)
button.AnchorPoint = Vector2.new(0, 0)
button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
button.BorderSizePixel = 0
button.Font = Enum.Font.SourceSans
button.Text = "OFF"
button.TextColor3 = Color3.fromRGB(0, 0, 0)
button.TextSize = 14
button.Parent = frame

-- ... existing code ...

-- Add Rals credit text
local creditText = Instance.new("TextLabel")
creditText.Name = "CreditText"
creditText.Parent = frame
creditText.BackgroundTransparency = 1
creditText.Size = UDim2.new(1, 0, 0, 20)
creditText.Position = UDim2.new(0, 0, 1, -20)
creditText.Font = Enum.Font.SourceSans
