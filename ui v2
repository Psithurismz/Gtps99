-- ... existing code ...

-- Add rounded corners to the button
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 10)
buttonCorner.Parent = button

local TweenService = game:GetService("TweenService")

-- ... existing code ...

-- Add functionality to the button
local isAutoChestEnabled = false

local function playButtonAnimation()
    -- Create a color transition animation
    local originalColor = button.BackgroundColor3
    local onColor = Color3.fromRGB(64, 224, 208) -- Set the color when the button is turned on (futuristic green)
    local transitionTime = 0.5 -- Set the duration of the color transition animation here

    local colorTween

    local function toggleButton()
        isAutoChestEnabled = not isAutoChestEnabled
        button.Text = isAutoChestEnabled and "ON" or "OFF"

        if isAutoChestEnabled then
            -- Create and play the color transition animation when turning on
            colorTween = TweenService:Create(button, TweenInfo.new(transitionTime), { BackgroundColor3 = onColor })
            colorTween:Play()
        else
            -- Create and play the color transition animation when turning off
            colorTween = TweenService:Create(button, TweenInfo.new(transitionTime), { BackgroundColor3 = originalColor })
            colorTween:Play()
        end

        -- Add your own logic here for enabling or disabling Auto Chest functionality
    end

    -- Play the animation when the button is clicked
    button.MouseButton1Click:Connect(toggleButton)
end

playButtonAnimation()
